<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:cache="http://www.springframework.org/schema/cache"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/cache
			http://www.springframework.org/schema/cache/spring-cache.xsd">

	<bean id="jedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig">
		<property name="maxTotal" value="10" />
		<property name="maxIdle" value="200" />
		<property name="minIdle" value="2" />
		<property name="maxWaitMillis" value="5000" />
	</bean>
	<bean id="jedisConnectionFactory"
		class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory">
		<property name="hostName" value="192.168.0.202" />
		<property name="port" value="6379" />
		<property name="password" value="" />
		<property name="usePool" value="true" />
		<property name="database" value="0" />
		<property name="poolConfig" ref="jedisPoolConfig" />
	</bean>

	<bean id="stringRedisTemplate" class="org.springframework.data.redis.core.StringRedisTemplate">
		<property name="connectionFactory" ref="jedisConnectionFactory" />
	</bean>

	<cache:annotation-driven />
	<bean id="cacheManager" class="org.springframework.data.redis.cache.RedisCacheManager">
		<constructor-arg ref="gatewayRedisTemplate"></constructor-arg>
	</bean>

	<bean id="gatewayRedisTemplate" class="org.springframework.data.redis.core.StringRedisTemplate">
		<property name="connectionFactory" ref="gateawayRedisConnectionFactory" />
	</bean>

	<bean id="gateawayRedisConnectionFactory"
		  class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory">
		<property name="hostName" value="192.168.0.202" />
		<property name="port" value="6379" />
		<property name="password" value="" />
		<property name="usePool" value="true" />
		<property name="database" value="2" />
		<property name="poolConfig" ref="jedisPoolConfig" />
	</bean>

</beans>